<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CalendarCustomView" parent="Theme.AppCompat">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="colorControlActivated">@color/calendarTextColorPrimary</item>
    </style>

    <style name="CalendarCustomText" parent="Theme.AppCompat">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CalendarCustomWeekText">
        <item name="android:weekDayTextAppearance">@color/white</item>
    </style>

    <style name="ButtonMainFragment" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/helvetica_light</item>
        <item name="android:background">@drawable/bg_btn_on_main_fragment</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:layout_height">102dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--    Style for buttons    -->
    <style name="ButtonNoteBg" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/helvetica_light</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_btn_note</item>
        <item name="android:paddingStart">25dp</item>
        <item name="android:paddingEnd">25dp</item>
    </style>

    <!--    Style for buttons    -->
    <style name="RcItemDir" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/helvetica_light</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_btn_note</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">30dp</item>

    </style>

    <!--    Style for top line    -->
    <style name="TopLineBg" parent="Theme.AppCompat">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginStart">38dp</item>
        <item name="android:layout_marginEnd">38dp</item>
        <item name="android:layout_marginTop">80dp</item>
    </style>

    <!--    Style for top star image view    -->
    <style name="TopStarStyle" parent="Theme.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:layout_marginStart">38dp</item>
        <item name="android:background">@drawable/ic_star_normal</item>
    </style>

    <!--    Style for labels    -->
    <style name="TopLabels" parent="Theme.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:fontFamily">@font/helvetica_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">11sp</item>
    </style>

    <!--    Style for image buttons go to main    -->
    <style name="ButtonGoToMain" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">38dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@drawable/ic_back</item>
    </style>

    <!--    Style for button go back    -->
    <style name="ButtonGoBack" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ic_btn_go_back</item>
        <item name="android:layout_marginBottom">9dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <!--    Style for labels in registration block    -->
    <style name="LabelsInRegistrationBlocks" parent="Theme.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/helvetica_regular</item>
        <item name="android:textSize">8dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <!--    Style for buttons in reg block    -->
    <style name="ButtonsOnRegistrationBlock" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/helvetica_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:background">@drawable/bg_btn_on_reg_block</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <!--    Style for button to settings    -->
    <style name="ButtonToSettings" parent="Widget.AppCompat.ImageButton">
        <item name="android:contentDescription">@string/text_btn_to_settings</item>
        <item name="android:layout_marginTop">38dp</item>
        <item name="android:layout_marginEnd">38dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ic_btn_go_to_settings</item>
    </style>

    <!--    Style for buttons in setting block    -->
    <style name="ButtonInSettings" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">48dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/helvetica_bold</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:background">@drawable/bg_btn_in_settings</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="HeaderFinance" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:background">@drawable/bg_header_finance</item>
        <item name="android:fontFamily">@font/helvetica_regular</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="TextFinance" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/helvetica_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="LabelsDateFinance" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--    Style for text in task    -->
    <style name="CreateTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/helvetica_regular</item>
        <item name="android:textColor">@color/task_text_color</item>
    </style>

    <!--    Style for radio button    -->
    <style name="CustomRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_height">15dp</item>
        <item name="android:textColor">@drawable/radio_button_text_color</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">6sp</item>
        <item name="android:fontFamily">@font/helvetica_regular</item>
        <item name="android:checked">false</item>
        <item name="android:background">@drawable/custom_radio_button_background</item>
    </style>
</resources>